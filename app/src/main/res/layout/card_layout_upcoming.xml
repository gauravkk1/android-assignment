<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:background="@color/card_background"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/euclid_light"
        android:text="25th T20 at Sharjah International Ground"
        android:textColor="@color/card_heading"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_18sdp"


        android:src="@drawable/ic_baseline_flag_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/euclid_semibold"
        android:text="Sri Lanka"
        android:textColor="@color/card_country"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="55dp"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        android:layout_marginStart="@dimen/_6sdp"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"

        android:layout_marginTop="@dimen/_3sdp"

        android:src="@drawable/ic_baseline_flag_24"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginStart="@dimen/_13sdp"
        app:layout_goneMarginTop="@dimen/_3sdp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/euclid_semibold"
        android:text="Bangladesh"
        android:textColor="@color/card_country"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="55dp"
        app:layout_constraintTop_toTopOf="@id/imageView1"
        app:layout_constraintBottom_toBottomOf="@id/imageView1"
        app:layout_constraintLeft_toRightOf="@id/imageView1"
        android:layout_marginStart="@dimen/_6sdp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_33sdp"
        android:layout_marginStart="@dimen/_178sdp"
        android:layout_marginTop="@dimen/_49sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:textColor="@color/stroke_color"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:30 PM"
        android:background="@color/card_country"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_61sdp"
        android:layout_marginStart="@dimen/_208sdp"
        android:textSize="@dimen/_9sdp"
        android:fontFamily="@font/euclid_semibold"
        android:id="@+id/timeConstraint"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 June"
        android:textColor="@color/card_country"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintTop_toBottomOf="@+id/timeConstraint"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/popins"
        android:layout_marginStart="@dimen/_202sdp" />





</androidx.constraintlayout.widget.ConstraintLayout>